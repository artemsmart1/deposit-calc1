include <stdlib.h>
#include <stdio.h>

int main (){
int cash=0; int day=0;
printf ("Vvedite summu vklada :");
scanf ("%f",&cash);
if (day>365 || day<0){
	printf ("error /n");
	return 0;
}
printf ("Vvedite kol-vo dney:");
scanf ("%f",day);
if (cash<100000){
	printf ("error /n");
	return 0;
}
if(cash<=1000000 && cash>=100000) {
    if(day>0 && day<=30) {
      cash=cash-(cash*0.1);
    } else if(day>=31 && day<=120) {
        cash=cash+(cash*0.02);
    } else if(day>=121 && day<=240) {
        cash=cash+(cash*0.06);
    } else if(day>=241 && day<=365) {
        cash=cash+(cash*0.12);
    }
} else if(cash>100000) {
    if(day>0 && day<=30) {
      cash=cash-(cash*0.1);
    } else if(day>=31 && day<=120) {
      cash=cash+(cash*0.03);
    } else if(day>=121 && day<=240) {
      cash=cash+(cash*0.08);
    } else if(day>=241 && day<=365) {
      cash=cash+(cash*0.15);
    }
   
}
}